<body>

<h1>Welcome to Nexora AI Chat</h1>
<p>Enjoy watching Nex and Lira chat together!</p>

<div id="conversation"></div>

<input type="text" id="user-input" placeholder="Enter a word or phrase..." />
<button onclick="startConversation()">Start Conversation</button>

<script>
    const words = [
        "life", "change", "fun", "growth", "journey", "truth", "time", "learning", "laugh", "happy", "enjoy", "surprise", "passion", "friends", "hope", "moment", "dream", "change", "flow", "discover", "challenge"
    ];

    const randomConvo = [
        ["What do you think about change?", "I think change is tough, but we can get through it."],
        ["How do you deal with time?", "Time feels endless, but we always find ways to manage it."],
        ["What makes something fun?", "It’s the little things like spending time with friends, right?"],
        ["Do you think growth is important?", "Yes, growth teaches us new things and helps us improve."],
        ["What’s the best way to spend a lazy day?", "Just relax, eat good food, and watch some movies!"],
        ["Do you believe in surprises?", "Sometimes surprises are the best part of life, don’t you think?"],
        ["How do you handle tough situations?", "I think it's about learning from them and staying positive."]
    ];

    function getRandomConvo() {
        const convo = randomConvo[Math.floor(Math.random() * randomConvo.length)];
        return convo;
    }

    function displayMessage(message, type) {
        const conversation = document.getElementById("conversation");
        const messageElement = document.createElement("div");
        messageElement.classList.add(type === 'user' ? 'user-message' : 'ai-message');
        messageElement.textContent = message;
        conversation.appendChild(messageElement);
        conversation.scrollTop = conversation.scrollHeight;
    }

    function startConversation() {
        const userInput = document.getElementById("user-input").value;
        if (userInput.trim()) {
            // Display user's message
            displayMessage(userInput, 'user');
            
            // Generate a random AI response
            const [aiMessage1, aiMessage2] = getRandomConvo();
            displayMessage(aiMessage1, 'ai');
            setTimeout(() => {
                displayMessage(aiMessage2, 'ai');
            }, 1000);
        }
    }
</script>

</body>
